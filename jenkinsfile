pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/your-username/your-django-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('my-django-app')
                }
            }
        }

        stage('Run Django in Container') {
            steps {
                script {
                    docker.image('my-django-app').run('-p 8000:8000')
                }
            }
        }
    }
}
