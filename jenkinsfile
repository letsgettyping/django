pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/letsgettyping/django.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('django_demo')
                }
            }
        }

        stage('Run Django in Container') {
            steps {
                script {
                    docker.image('django_demo').run('-p 8000:8000')
                }
            }
        }
    }
}
